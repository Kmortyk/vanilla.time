<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#b1adac">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/file_list_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/file_name_edit_text"
            android:layout_alignEnd="@+id/file_name_edit_text"
            android:layout_alignRight="@+id/file_name_edit_text"
            android:layout_marginStart="-4dp"
            android:layout_marginEnd="-70dp"
            android:layout_marginRight="-70dp"
            android:layout_toEndOf="@+id/file_name_edit_text"
            android:labelFor="@id/hex_edit_text"
            android:text=".csv"
            android:textColor="#090909"
            android:textSize="14sp" />

        <EditText
            android:id="@id/file_name_edit_text"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blue_seek_bar"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="11dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/edit_text_background_selector"
            android:inputType="textCapCharacters|textNoSuggestions"
            android:lines="1"
            android:maxLines="1"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textColor="#090909"
            android:textCursorDrawable="@null"
            android:textSize="14sp"
            android:text="File name"
            android:textAppearance="?attr/textAppearanceListItem" />

        <Button
            android:id="@+id/accept_button"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blue_seek_bar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="#b1adac"
            android:text="Ok"
            android:textSize="14sp" />

        <Button
            android:id="@+id/cancel_button"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blue_seek_bar"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/accept_button"
            android:background="#b1adac"
            android:text="Cancel"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>